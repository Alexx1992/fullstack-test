{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": false
  },
  "include": ["src/server"],
  "exclude": ["node_modules"]
}
